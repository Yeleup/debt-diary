{# @var ea \EasyCorp\Bundle\EasyAdminBundle\Context\AdminContext #}
{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_title market.title %}

{% block page_actions %}
    <div class="global-actions">
        <a class=" action-new btn btn-primary" href="{{ ea_url().setController('App\\Controller\\Admin\\CustomerCrudController').setAction('new').includeReferrer() }}" data-action-name="new">{{ lang.add|trans }}</a>
    </div>
{% endblock %}

{% block main %}
    <style>
        /*Стили только для смартфонов*/
        @media screen and (max-device-width:480px){

            .list-pagination {
                max-width: 200px;
            }

            .list-pagination nav {
                margin-left: -15px;
            }
        }
        /*Стили только для планшетов*/
        @media screen and (min-device-width:481px){
        }
        /*Стили только для десктопов*/
        @media screen and (min-width:769px){
        }
    </style>
    <div class="datagrid-header-tools">
        <div class="datagrid-search">
            <div class="form-action form-action-search">
                <form method="get">
                    {# reset the referrer and page number whenever a new query is performed #}
                    {% set query_parameters = ea.request.query.all|merge({
                        referrer: null, page: 1,
                    }) %}

                    {# browsers remove the query string when submitting forms using GET;
                       that's why all query string parameters are added as hidden form fields #}
                    {% for paramName, paramValue in query_parameters|ea_flatten_array %}
                        <input type="hidden" name="{{ paramName }}" value="{{ paramValue }}">
                    {% endfor %}

                    <div class="form-group">
                        <div class="form-widget">
                            <input class="form-control" type="search" name="search" value="{{ app.request.get('search') ?? '' }}" placeholder="{{ 'action.search'|trans(ea.i18n.translationParameters, 'EasyAdminBundle') }}" spellcheck="false" autocorrect="false">

                            {% if app.request.get('search') %}
                                <a href="{{ ea_url().unset('search') }}" class="action-search-reset">
                                    <i class="fas fa-times-circle"></i>
                                </a>
                            {% endif %}
                        </div>
                    </div>

                    <div class="form-group mt-2">
                        <div class="form-widget">
                            <select name="sorting" class="form-control" onchange="javascript:this.form.submit()">
                                {% for paramName, paramValue in query_parameters|ea_flatten_array %}
                                    {% if paramName == 'sorting' %}
                                        {% for sort in sorts %}
                                            {% if paramValue == sort.value %}
                                                <option selected value="{{ sort.value }}">{{ sort.text }}</option>
                                            {% else %}
                                                <option value="{{ sort.value }}">{{ sort.text }}</option>
                                            {% endif %}
                                        {% endfor %}
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                    <div class="form-group mt-2">
                        <div class="form-widget">
                            <select name="order" class="form-control" onchange="javascript:this.form.submit()">
                                {% for paramName, paramValue in query_parameters|ea_flatten_array %}
                                    {% if paramName == 'order' %}
                                        {% if paramValue == 'ASC' %}
                                            <option selected value="ASC">С наименьшей</option>
                                            <option value="DESC">С наибольшей</option>
                                        {% else %}
                                            <option value="ASC">С наименьшей</option>
                                            <option selected value="DESC">С наибольшей</option>
                                        {% endif %}
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="datagrid-filters">

        </div>
    </div>

    <div class="content-panel">
        <div class="content-panel-body without-header {{ not has_page_footer ? 'without-footer' }}">
        {% block page_content %}
            <div class="list-group">
                {% for customer in customers %}
                    <div class="list-group-item">
                        <a href="{{ customer.href }}" class="list-group-item-action">
                            <h4>{{ customer.name }}</h4>
                            <p>{{ customer.place }}</p>
                            <div class="d-flex justify-content-between">
                                {% if customer.total is not empty %}
                                    <h4>{{ customer.total~'₸'}}</h4>
                                {% endif %}

                                {% if customer.lastTransaction is not empty %}
                                    <small>{{ customer.lastTransaction|date("d-m-Y") }}</small>
                                {% endif %}
                            </div>
                        </a>
                        <a href="{{ customer.href }}" class="btn btn-lg">{{ lang.customerHistory|trans }}</a>
                        <a href="{{ ea_url().setController('App\\Controller\\Admin\\CustomerCrudController').setAction('edit').setEntityId(customer.id).includeReferrer() }}" class="btn btn-lg">{{ lang.edit|trans }}</a>
                    </div>
                {% endfor %}
            </div>
        {% endblock %}
        </div>

        <div class="content-panel-footer without-padding without-border">
            <div class="list-pagination">
                {{ knp_pagination_render(pagination,'@KnpPaginator/Pagination/twitter_bootstrap_v4_pagination.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
